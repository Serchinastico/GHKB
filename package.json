{
  "name": "ghkb",
  "version": "1.0.0",
  "description": "Script to generate a static HTML Kanban view from a GitHub project",
  "author": "Serchinastico",
  "main": "src/index.ts",
  "scripts": {
    "build": "run-s build:dir build:code build:css build:assets",
    "build:dir": "mkdir out",
    "build:assets": "cp -r template/img out",
    "build:code": "tsx src/index.ts -- create serchinastico 5",
    "build:css": "npx tailwindcss -i ./template/styles.css -o ./out/styles.css",
    "dev": "run-p dev:css dev:code dev:out",
    "dev:code": "npx nodemon src/index.ts create serchinastico 5",
    "dev:css": "npx tailwindcss -i ./template/styles.css -o ./out/styles.css --watch",
    "dev:out": "live-server out"
  },
  "dependencies": {
    "@octokit/graphql": "^7.0.2",
    "chalk": "^5.3.0",
    "color": "^4.2.3",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "exec-sh": "^0.4.0",
    "figlet": "^1.7.0",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@octokit/graphql-schema": "^14.47.0",
    "@types/color": "^3.0.6",
    "@types/ejs": "^3.1.5",
    "@types/figlet": "^1.5.8",
    "@types/node": "^20.10.8",
    "live-server": "^1.1.0",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
